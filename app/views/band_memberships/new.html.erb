
<h1>Form a Band</h2>
<form class="form-inline" action="<%= band_memberships_path %>" method="post">
  
  <select class="form-control" name="musician_id">
    <% @musicians.each do |musician| %>
    <option value="<%= musician.id %>"><%= musician.name %></option>
    <% end %>
    </select>

    <select class="form-control" name="band_id">
    <% @bands.each do |band| %>
    <option value="<%= band.id %>"><%= band.name %></option>
    <% end %>
    </select>

    <button class="btn btn-danger" id="submit">CREATE NEW BAND MEMBERSHIP</button>
</form>

<div class="col-md-2" style="margin-top: 15px;">
<a href="<%= root_path %>" type="button" class="btn btn-success btn-block">Back To Home</a>
</div>